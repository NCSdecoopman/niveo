{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "IamBasic",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole","iam:DeleteRole","iam:UpdateAssumeRolePolicy",
        "iam:AttachRolePolicy","iam:DetachRolePolicy","iam:PassRole",
        "iam:CreatePolicy","iam:DeletePolicy","iam:GetRole","iam:GetPolicy","iam:GetPolicyVersion",
        "iam:ListAttachedRolePolicies"
      ],
      "Resource": "*",
      "Condition": { "StringEquals": { "iam:PassedToService": "lambda.amazonaws.com" } }
    },
    {
      "Sid": "LambdaBasic",
      "Effect": "Allow",
      "Action": [
        "lambda:CreateFunction","lambda:UpdateFunctionCode","lambda:UpdateFunctionConfiguration",
        "lambda:GetFunction","lambda:AddPermission","lambda:RemovePermission"
      ],
      "Resource": "*"
    },
    {
      "Sid": "LogsBasic",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup","logs:PutRetentionPolicy","logs:DescribeLogGroups",
        "logs:CreateLogStream","logs:PutLogEvents","logs:DeleteLogGroup"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EventsBasic",
      "Effect": "Allow",
      "Action": [
        "events:PutRule","events:DeleteRule","events:PutTargets","events:RemoveTargets",
        "events:ListTagsForResource","events:TagResource","events:UntagResource","events:DescribeRule"
      ],
      "Resource": "*"
    }
  ]
}